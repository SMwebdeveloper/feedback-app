{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./src/",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      //Direct
      //Sub Locations
      "@/*": [
        "*"
      ],
      "@/components/*": [
        "components/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.jpg",
    "src/**/*.png",
    "src/**/*.svg",
    "vite.config."
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}